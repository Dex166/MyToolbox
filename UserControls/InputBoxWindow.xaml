<Window x:Class="UserControls.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControls"
        mc:Ignorable="d"
        Title="InputBox" FontSize="15" SizeToContent="Height" Background="LightGray" Icon="image/InputBox.ico" WindowStartupLocation="CenterScreen" Width="300">
	<StackPanel>
		<TextBlock Margin="10" TextWrapping="Wrap" Text="{Binding Messaggio}"/>
		<TextBox Margin="10,0" Text="{Binding Text}" KeyDown="TextBox_KeyDown" Name="TextBox"/>
		<Button Margin="10" Content="OK" IsDefault="True" Width="100" Click="Button_OK_Click"/>
	</StackPanel>
</Window>
