<UserControl x:Class="UserControls.UserButton"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:UserControls" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 d:DataContext="{d:DesignInstance local:UserButton, IsDesignTimeCreatable=True}"
			 Name="root"
			 d:FontSize="15"
			 mc:Ignorable="d"
			 d:Width="150">
	<UserControl.Resources>
		<local:ButtonConverter x:Key="MisureConverter" />
	</UserControl.Resources>

	<Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch"
			CommandParameter="{Binding CommandParameter, ElementName=root}"
			Command="{Binding Command, ElementName=root}"
			Click="Button_Click">
		<Grid FlowDirection="{Binding FlowDirection, ElementName=root}" Grid.Column="0" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{Binding ElementName=root, Path=Height, Converter={StaticResource MisureConverter}}"/>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition Width="{Binding ElementName=root, Path=Height, Converter={StaticResource MisureConverter}}"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="{Binding ElementName=root, Path=Height, Converter={StaticResource MisureConverter}}"/>
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="1" Name="SpazioImmagine" >
				<TextBlock FontFamily="Segoe Fluent Icons" FontSize="30" 
						   Foreground="{Binding FillIconColor, ElementName=root}"
						   Text="{Binding FillIcon, ElementName=root}" />
				<TextBlock FontFamily="Segoe Fluent Icons" FontSize="30"
						   Foreground="{Binding IconColor, ElementName=root}"
						   Text="{Binding Icon, ElementName=root}" />
				<!--<Image Name="image" Width="30" Source="{Binding Image, ElementName=root}" />-->

			</Grid>
			<TextBlock Grid.Column="3"
					   VerticalAlignment="Center" TextAlignment="Center"
					   Foreground="{Binding ElementName=root, Path=Foreground}"
					   Text="{Binding Title, ElementName=root}" />
		</Grid>
	</Button>
</UserControl>
