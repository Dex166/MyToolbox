<UserControl x:Class="UserControls.CancelTextBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:UserControls" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 d:DataContext="{d:DesignInstance local:CancelTextBox,
											  IsDesignTimeCreatable=True}"
			 d:Width="200" d:Height="29.95"
			 mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0"
				   Margin="5,0" VerticalAlignment="Center"
				   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:CancelTextBox}}" />
		<TextBox Grid.Column="1"
				 KeyDown="Escape_KeyDown"
				 Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
		<Button Grid.Column="1"
				Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
				Margin="1" HorizontalAlignment="Right" Panel.ZIndex="1"
				BorderThickness="0" Click="Cancella_Click" Background="#09000000" >
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="14" />
				</Style>
			</Button.Resources>
			<TextBlock FontSize="16" FontFamily="Segoe Fluent Icons" Text="" Foreground="DimGray" />
		</Button>
	</Grid>
</UserControl>
