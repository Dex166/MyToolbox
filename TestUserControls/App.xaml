<Application x:Class="TestUserControls.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:TestUserControls"
			 xmlns:BL="clr-namespace:BL.Controls;assembly=BL.Controls"
			 StartupUri="MainWindow.xaml">
	<Application.Resources>

		<Style TargetType="{x:Type BL:IconButton}">
			<Setter Property="Margin" Value="5,0" />
			<Setter Property="IconColor" Value="SteelBlue" />
			<Setter Property="Background" Value="LightGray"/>

			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Width" Value="150" />
			<Setter Property="Height" Value="40" />
			<Setter Property="VerticalAlignment" Value="Center" />

		</Style>
	</Application.Resources>
</Application>
